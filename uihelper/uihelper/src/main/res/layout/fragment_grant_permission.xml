<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myPrimaryColor"
    tools:ignore="MergeRootFrame">


    <ImageView
        android:id="@+id/mobileInHandIcon"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_above="@+id/bottom_menu_layout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mobile9" />

    <RelativeLayout
        android:id="@+id/bottom_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/myPrimaryColor">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentTop="true"
            android:background="@android:color/white" />


        <RelativeLayout
            android:id="@+id/menuItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/menuExitTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Exit"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/menuSettingsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:padding="@dimen/_5sdp"
            android:text="Setting"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grantPermissionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/grantPermisiionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="Grant permission"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white" />


        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mobileInHandIcon"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/headingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:text="Grant permission"
            android:textSize="@dimen/_25sdp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/subHeadingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_70sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="Please grant permission"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="bottom">

            <LinearLayout

                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_50sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/circular_background"
                android:orientation="vertical"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/ic_message"
                    android:tint="@color/white"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@drawable/circular_background"
                android:orientation="vertical"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:tint="@color/white"
                    android:background="@drawable/ic_add_contact"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_50sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/circular_background"
                android:orientation="vertical"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:tint="@color/white"
                    android:background="@drawable/ic_add_contact"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
