<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nu_rv_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/nu_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/nu_rv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/name_address_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mes_rv_date"
            android:layout_alignTop="@id/nu_rv_profile"
            android:layout_toRightOf="@+id/nu_rv_profile"
            android:weightSum="1"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/nu_rv_name"
                android:textSize="18sp"
                android:textColor="#505050"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/nu_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"
                android:tint="@color/md_grey_700"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <com.mesibo.emojiview.EmojiconTextView
            android:id="@+id/nu_memeber_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="longer message is longer message is another longer message to make it haappen"
            android:textStyle="normal"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:textColor="#868686"
            android:visibility="visible"
            card_view:emojiconSize="16sp"
            android:layout_weight="3"
            android:layout_gravity="bottom"
            android:layout_below="@+id/name_address_layout"
            android:layout_alignLeft="@+id/name_address_layout"
            android:layout_alignStart="@+id/name_address_layout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="4dp"
            />

    </RelativeLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        />



</RelativeLayout>

